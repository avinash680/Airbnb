<% layout("/layouts/boilerplate") %>

  <h3>All listings</h3>
  
  
  <!-- <form action="/listings/new" method="GET">
    <button>Creat New Listing</button>
  </form> -->



<% if (allListings && allListings.length > 0) { %>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
<% for (let listing of allListings) { %>
 <a href="/listings/<%= listing._id %>" class="listing-link text-reset">
  <div class="card col listing-card">
    <img src="<%= (listing.image && listing.image.url) ? listing.image.url : '/images/default-listing.svg' %>" class="card-img-top" alt="listing_image" style="height: 20rem; width:100%; object-fit:cover;">
    <div class="card-img-overlay"></div>
    <div class="card-body">
      <p class="card-text"> <b><%=  listing.title  %> </b><br>
      &#8377;<%= (listing.price != null) ? listing.price.toLocaleString('en-IN') : 'N/A' %> /night
      </p>
 
    </div>
  </div>
</a>
<% } %>
</div>
<% } else { %>
  <div class="alert alert-info">
    <p>No listings found. <a href="/listings/new">Create a new listing</a> to get started!</p>
  </div>
<% } %>


