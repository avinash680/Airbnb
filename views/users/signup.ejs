<% layout("/layouts/boilerplate")%>

<div class="row">
   <h1 class="col-6 offset-3">SignUp on Airbnb</h1>      
  
  <div class="col-6 offset-3" >
 <form action="/signup" method="POST" class="needs-validation" novalidate>
   
  <div  class="mb-3" >
         <lable for="username" class="form-lable">Username</lable>
        <input name="username"  type="text" class="form-control" required />
        <div class="valid-feedback">
          Looks good!
        </div>

      </div>


  <div  class="mb-3" >
         <lable for="email" class="form-lable">Email</lable>
        <input name="email"  type="email" class="form-control" required />
        <div class="valid-feedback">
          Looks good!
        </div>

      </div>

      
  <div  class="mb-3" >
         <lable for="password" class="form-lable">Password</lable>
        <input name="password"  type="password" class="form-control" required />
        <div class="valid-feedback">
          Looks good!
        </div>
    <button class="btn  btn-top mt-3">SignUp</button>
      </div>



 </form>


        </div>
           
  </div>